---
import "../styles/global.css";
import { Toaster } from "sonner";
import { TopMenu } from "../components/TopMenu";

interface Props {
  title?: string;
}

const { title = "10x Cards" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <TopMenu client:load />
    <div class="container mx-auto px-4 py-6 min-h-[calc(100vh-64px)]">
      <slot />
    </div>
    <Toaster client:only="react" richColors position="top-right" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    background: linear-gradient(to bottom right, #111827, #1e3a8a, #000000);
    background-attachment: fixed;
    min-height: 100vh;
  }
</style>
