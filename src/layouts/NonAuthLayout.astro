---
import "../styles/global.css";
import { Toaster } from "sonner";

interface Props {
  title?: string;
}

const { title = "10x Cards - Authentication" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-gray-900 via-blue-950 to-black min-h-screen">
    <div class="container mx-auto px-4 py-12 flex items-center justify-center min-h-screen">
      <div
        class="w-full max-w-md backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl shadow-2xl p-8 border border-white/10"
      >
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold bg-gradient-to-r from-blue-300 to-blue-100 text-transparent bg-clip-text">
            10x Cards
          </h1>
          <p class="text-blue-100/90 mt-2">Learn smarter, not harder</p>
        </div>
        <slot />
      </div>
    </div>
    <Toaster client:only="react" richColors position="top-right" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
